<% layout('layouts/boilerplate') %> 
    <h1>All Campgrounds</h1>
    <a href="/campgrounds/new">Add Campground</a>
    <ul>
      <% for(let camp of campgrounds) { %>
        <div class="card" mb-3>
        <div class="row">
          <div class="col-md-4">
            <img class="img-fluid" alt="" src="<%= camp.image %> ">
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title">
                <%= camp.title %> 
              </h5>
           <p class="card-text">
                <small class="text-muted"><%= camp.description %></small>
           </p>
           <a href="/campgrounds/<%=camp.id%> " class="btn btn-primary">View <%= camp.title %> </a>
            </div>
          </div>
        </div>
        <div>

      <% } %>
    </ul>

</html>
